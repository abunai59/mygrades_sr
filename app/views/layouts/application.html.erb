      <div class="navbar-inner">
        <div class="container">
          <%= link_to "MyGrades", '#', id: "logo" %>
          <nav>
            <ul class="nav pull-right">
              	<li> <%= link_to "Courses", courses_path %> </li>
								<li> <%= link_to "Grades", grades_path %> </li>
